<Window x:Class="VoiceKeyboard.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Голосовая клавиатура" Height="200" Width="400"
        Icon="/Resources/logo.ico">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label>Голосовая клавиатура  v1.0.0</Label>
            <StackPanel Orientation="Horizontal">
                <Button Click="AddCommandButton_OnClick">Добавить команду</Button>
                <Button Click="CommandsButton_OnClick">Введённые команды</Button>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Button Content="Импорт команд" Command="{Binding ImportCommandsCommand}"></Button>
                <TextBox Text="{Binding PathModel.Path,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                <Button Content="Экспорт команд" Command="{Binding ExportCommandsCommand}"></Button>
                <TextBox Text="{Binding PathModel.Path,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <Label Margin="10" Content="Микрофон включен"></Label>
            <CheckBox IsChecked="{Binding AppStateModel.IsMicrophoneOn}"
                      Command="{Binding ChangeMicrophoneStatusCommand}">
            </CheckBox>
        </StackPanel>
        <!-- <Image Source="/Resources/logo.jpg"></Image> -->
    </Grid>
</Window>