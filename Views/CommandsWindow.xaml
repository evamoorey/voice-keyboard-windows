<Window x:Class="VoiceKeyboard.Views.CommandsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:VoiceKeyboard.Views"
        mc:Ignorable="d"
        Title="Голосовая клавиатура" Height="268" Width="400"
        Icon="/Resources/logo.ico">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Margin="0,20,0,10" HorizontalAlignment="Center">Сохранённые сочетания</Label>
            <ListBox Name="CommandsListBox"
                     BorderThickness="0" Margin="10,0,10,0" MaxHeight="120" Height="150"
                     ItemsSource="{Binding CommandsList}" />
            <Button HorizontalAlignment="Left" Margin="10,12,0,0" Content="Удалить"
                    Command="{Binding DeleteCommandCommand}"
                    CommandParameter="{Binding ElementName=CommandsListBox, Path=SelectedItem}">
            </Button>
        </StackPanel>
    </Grid>
</Window>